<ul class="date-table reset-list">
{% for post in postslist | reverse %}
  <li class="my-1">
    <time style="width: 6rem; text-align: right;" datetime="{{ post.date | htmlDateString }}" class="text-muted">
      {{ post.date | readableDate }}
    </time>
    <span>
      <div>
        <a href="{{ post.url | url }}" class="fw-bold">
          {% if post.data.title %}{{ post.data.title }}
          {% else %}<code>{{ post.url }}</code>{% endif %}
        </a>
      </div>
      <div>
        {{ post.data.description }}
      </div>
    </span>
  </li>
{% endfor %}
</ul>
