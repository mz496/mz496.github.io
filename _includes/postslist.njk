<ol reversed style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <li class="spaced-lg paragraph-line-height">
    <span class="block">
    <a href="{{ post.url | url }}" class="bold">
      {% if post.data.title %}{{ post.data.title }}
      {% else %}<code>{{ post.url }}</code>
    {% endif %}</a>
    </span>

    <span class="block">
    {{ post.data.description }}
    </span>

    <span class="block">
    <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time> â€¢
    {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </span>
  </li>
{% endfor %}
</ol>
