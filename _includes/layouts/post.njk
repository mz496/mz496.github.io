---
layout: layouts/base.njk
templateClass: tmpl-post
---
<h1>{{ title }}</h1>

<p class="description">
{{ description }} â€¢
<time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
</p>

<p>
<i>tags:</i>{% for tag in tags %}
  {%- if collections.tagList.indexOf(tag) != -1 -%}
  {% set tagUrl %}/tags/{{ tag }}/{% endset %}
  <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
  {%- endif -%}
{% endfor %}
</p>

{{ content | safe }}

<hr class="post-footer">
Let me know your thoughts on <a href="https://twitter.com/mz496_">Twitter!</a>

<table class="post-footer">
<tr>
<td>
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if previousPost %}Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>{% endif %}
</td>
<td>
{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- if nextPost %}Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>{% endif %}
</td>
</tr>
</table>

