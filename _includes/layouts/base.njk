<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/bootstrap-utilities.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/bootstrap-reboot.min.css' | url }}">
    <link href="https://unpkg.com/prismjs@1.26.0/themes/prism-solarizedlight.css" rel="stylesheet">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-H70DRKX1K6"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-H70DRKX1K6');
    </script>
  </head>
  <body>
    <header style="display: flex; gap: 2rem">
      <a href="{{ '/' | url }}"
      class="my-4 text-decoration-none">
        {{ metadata.title }}
      </a>

      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      {%- for entry in collections.all | eleventyNavigation %}
        <a href="{{ entry.url | url }}"
        class="my-4 text-decoration-none{% if entry.url == page.url %} fw-bold{% endif %}">
          {{ entry.title }}
        </a>
      {%- endfor %}
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
