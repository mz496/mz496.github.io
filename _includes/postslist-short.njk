<ul class="reset-list">
{% for post in postslist | reverse %}
  <li class="my-1">
    <time datetime="{{ post.date | htmlDateString }}" class="text-muted">
      {{ post.date | readableDate }}
    </time>
    <a href="{{ post.url | url }}" class="fw-bold">
      {% if post.data.title %}{{ post.data.title }}
      {% else %}<code>{{ post.url }}</code>{% endif %}
    </a>
  </li>
{% endfor %}
</ul>
